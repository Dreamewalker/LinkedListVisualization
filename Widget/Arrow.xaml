<Viewbox x:Class="LinkedListVisualization.Widget.Arrow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LinkedListVisualization.Widget"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="190">
    <Viewbox.RenderTransform>
        <TransformGroup>
            <ScaleTransform x:Name="ScaleTrans" ScaleX="1" ScaleY="1" CenterX="190" CenterY="17.5"/>
            <RotateTransform x:Name="Rotation" Angle="0" CenterX="190" CenterY="17.5"/>
        </TransformGroup>
    </Viewbox.RenderTransform>
    <Canvas
        Width="200"
        Height="35">
        <Viewbox
            Name="ArrowLine"
            Canvas.Left="65"
            Canvas.Top="20">
            <Viewbox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.05" ScaleY="0.05"/>
                    <RotateTransform Angle="270"/>
                </TransformGroup>
            </Viewbox.RenderTransform>
            <Path
                Fill="#555555">
                <Path.Data>
                    <PathGeometry
                    Figures="
                        M0 50 C0 0, 0 0, 50 0 
                        M50 0 C100 0, 100 0, 100 50 
                        M100 50 L0 50 L50 0
                        M0 50 L100 50 L100 1000 L0 1000
                        M0 1000 C0 1050, 0 1050, 50 1050
                        M50 1050 C100 1050, 100 1050, 100 1000 
                        M0 1000 L100 1000 L50 1050
                        Z"
                />
                </Path.Data>
            </Path>
        </Viewbox>
        <Viewbox
            Canvas.Left="65"
            Canvas.Top="20"
            >
            <Viewbox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.05" ScaleY="0.05"/>
                </TransformGroup>
            </Viewbox.RenderTransform>
            <Viewbox
                Name="ArrowUp"
                Opacity="1"
            >
                <Viewbox.RenderTransform>
                    <TransformGroup>
                        <RotateTransform
                            Angle="240"/>
                    </TransformGroup>
                </Viewbox.RenderTransform>
                <Path
                Fill="#555555">
                    <Path.Data>
                        <PathGeometry
                    Figures="
                        M0 50 C0 0, 0 0, 43.30 -25
                        M43.30 -25 C86.60 -50, 86.60 -50, 86.60 0
                        M0 50 L43.30 -25 86.60 0, 86.60 500, 43.30 525, 0 450
                        M0 450 C0 500, 0 500, 43.30 525
                        M43.30 525 C86.60 550, 86.60 550, 86.60 500
                        Z"
                />
                    </Path.Data>
                </Path>
            </Viewbox>
        </Viewbox>

        <Viewbox
            Canvas.Left="65"
            Canvas.Top="15">
            <Viewbox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.05" ScaleY="0.05"/>
                </TransformGroup>
            </Viewbox.RenderTransform>
            <Viewbox
                Name="ArrowDown"
                Opacity="1">
                <Viewbox.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="120"/>
                    </TransformGroup>
                </Viewbox.RenderTransform>
                <Path
                Fill="#555555">
                    <Path.Data>
                        <PathGeometry
                    Figures="
                        M0 -450 C0 -500, 0 -500, 43.30 -525
                        M43.30 -525 C86.60 -550, 86.60 -550, 86.60 -500
                        M0 -450 L43.30 -525 86.60 -500, 86.60 0, 43.30 25, 0 -50
                        M0 -50 C0 0, 0 0, 43.30 25
                        M43.30 25 C86.60 50, 86.60 50, 86.60 0
                        Z"
                />
                    </Path.Data>
                </Path>
            </Viewbox>
        </Viewbox>
    </Canvas>

</Viewbox>
